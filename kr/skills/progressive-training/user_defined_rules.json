{
  "seed": 42,
  "loop_config": {
    "max_versions": 5
  },
  "dataset_config": {
    "dataset_id": "v1"
  },
  "training_config": {
    "num_gpus": 1,
    "epochs": 3,
    "eval_step": "every_epoch",
    "loss_function": "CTC"
  },
  "eval_config": {
    "primary_metric": "loss",
    "metrics": [
      {"name": "loss", "higher_is_better": false},
      {"name": "wer", "higher_is_better": false},
      {"name": "cer", "higher_is_better": false},
      {"name": "exact_match", "higher_is_better": true}
    ],
    "infer_samples": 10
  }
}